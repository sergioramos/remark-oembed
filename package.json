{
  "name": "@sergioramos/remark-oembed",
  "description": "Converts URLs surrounded by newlines into embeds that are loaded asynchronously",
  "version": "1.0.0",
  "repository": "sergioramos/remark-oembed",
  "main": "index.js",
  "keywords": [
    "oembed",
    "markdown",
    "remark",
    "async",
    "defer",
    "blurhash"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "scripts": {
    "eslint": "eslint . --ext .js",
    "fmt": "prettier --config .prettierrc --write '**/*'",
    "test": "OEMBED_TEST_ID=oembed-test-id NODE_ENV=test c8 -r lcovonly -r text ava --timeout 999999999"
  },
  "dependencies": {
    "blurhash": "^1.1.3",
    "canvas": "^2.6.1",
    "got": "^11.1.0",
    "htm": "^3.0.4",
    "lit-html": "^1.2.1",
    "mime": "^2.4.5",
    "shortid": "^2.2.15",
    "unist-util-select": "^3.0.1",
    "vhtml": "^2.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.31.0",
    "ava": "^3.8.1",
    "babel-eslint": "^10.1.0",
    "c8": "^7.1.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-config-xo-react": "^0.23.0",
    "eslint-config-xo-space": "^0.24.0",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "mz": "^2.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "puppeteer": "^3.0.2",
    "remark": "^12.0.0",
    "remark-html": "^11.0.1",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --config .prettierrc --write",
      "git add"
    ],
    "*.*": [
      "prettier --config .prettierrc --write",
      "git add"
    ]
  }
}
