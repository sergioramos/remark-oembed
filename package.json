{
  "name": "@sergioramos/remark-oembed",
  "description": "Converts URLs surrounded by newlines into embeds that are loaded asynchronously",
  "version": "1.0.0",
  "repository": "sergioramos/remark-oembed",
  "main": "index.js",
  "keywords": [
    "oembed",
    "markdown",
    "remark",
    "remarkjs",
    "remark-plugin",
    "html-embed",
    "async",
    "defer"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "scripts": {
    "eslint": "eslint . --ext .js",
    "fmt": "prettier --config .prettierrc --write '**/*'",
    "test": "NODE_ENV=test c8 -r lcovonly -r text ava --timeout 9999 --serial"
  },
  "dependencies": {
    "apr-intercept": "^3.0.3",
    "got": "^11.1.2",
    "hast-util-select": "^4.0.0",
    "hast-util-to-html": "^7.1.1",
    "hastscript": "^5.1.2",
    "mime": "^2.4.5",
    "unist-util-select": "^3.0.1"
  },
  "devDependencies": {
    "ava": "^3.8.2",
    "c8": "^7.1.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-xo-space": "^0.24.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "mz": "^2.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "puppeteer": "^3.0.4",
    "remark": "^12.0.0",
    "remark-html": "^11.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --config .prettierrc --write",
      "git add"
    ],
    "*.*": [
      "prettier --config .prettierrc --write",
      "git add"
    ]
  }
}
